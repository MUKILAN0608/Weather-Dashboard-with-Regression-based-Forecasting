async function fetchCityFromSearch() {
    const cityInput = document.getElementById('city-input');
    const cityName = cityInput.value.trim();

    if (!cityName) {
        showNotification("Please enter a city name.", 'error');
        return;
    }

    try {
      
        fetchCity(cityName)
      
    } catch (error) {
        showNotification(`Error fetching weather data: ${error.message}`, 'error');
    }
}


    function startVoiceRecognition(inputId) {
        if ('SpeechRecognition' in window || 'webkitSpeechRecognition' in window) {
            const SpeechRecognition = window.SpeechRecognition || window.webkitSpeechRecognition;
            const recognition = new SpeechRecognition();
            recognition.interimResults = true;
    
            recognition.onresult = function(event) {
                const last = event.results.length - 1;
                let command = event.results[last][0].transcript.trim();
                if (command.endsWith(".")) {
                    command = command.slice(0, -1);
                }
                document.getElementById(city-input).value = command;
                fetchCity(command);
                fetchWeather(command);
                speakMessage()
            };
    
            recognition.start();
        } else {
            alert('Speech recognition is not supported in your browser. Please use Chrome or Edge.');
        }
    }
    
const openWeatherMapApiKey = '36b3e04a424745f6b12a3bcf00e54769';
const timeZoneDBAPIKey = 'XB6EHS2NKPG6';
const weatherApiKey = 'f49b75258d944d88815113325242505';




let timeZoneOffset;

        async function getCoordinates(city) {
            const response = await fetch(`https://api.openweathermap.org/geo/1.0/direct?q=${city}&limit=1&appid=${openWeatherMapApiKey}`);
            if (!response.ok) {
                return null;
            }
            const data = await response.json();
            if (data.length === 0) {
                return null;
            }
            return { lat: data[0].lat, lon: data[0].lon };
        }

        async function getTimeZone(lat, lon) {
            const response = await fetch(`https://api.timezonedb.com/v2.1/get-time-zone?key=${timeZoneDBAPIKey}&format=json&by=position&lat=${lat}&lng=${lon}`);
            if (!response.ok) {
                return null;
            }
            const data = await response.json();
            if (data.status !== 'OK') {
                return null;
            }
            return data.gmtOffset;
        }

        function formatDate(date) {
            const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
            return date.toLocaleDateString('en-US', options);
        }

        function updateTime() {
            if (timeZoneOffset === undefined) {
                return;
            }
            const now = new Date();
            const localTime = new Date(now.getTime() + now.getTimezoneOffset() * 60000 + timeZoneOffset * 1000);
            var TIME = document.getElementById('time');
            TIME.innerText = localTime.toLocaleTimeString();
            var DATE = document.getElementById('date');
            DATE.innerText = formatDate(localTime);
        }

        async function startUpdatingTime(city) {
            try {
                const coordinates = await getCoordinates(city);
                if (!coordinates) {
                    throw new Error(`Could not find coordinates for ${city}.`);
                }

                const offset = await getTimeZone(coordinates.lat, coordinates.lon);
                if (offset === null) {
                    throw new Error(`Could not find time zone for ${city}.`);
                }

                timeZoneOffset = offset;

                updateTime();
                setInterval(updateTime, 1000);
            } catch (error) {
                console.error('An error occurred:', error);
            }
        }

        function redirectToHourlyPage() {
            var cityInput = document.getElementById('city-input');
            
            if (cityInput) {
                var cityName = cityInput.value.trim();
        
                if (cityName) {
                    var encodedCityName = encodeURIComponent(cityName);
                    var url = `HOURLY.html?city=${encodedCityName}`;
                    window.location.href = url;
                    return false;
                } else {
                    const urlParams = new URLSearchParams(window.location.search);
                    const encodedCityName = urlParams.get('city');
        
                    if (encodedCityName) {
                        var url = `HOURLY.html?city=${encodedCityName}`;
                        window.location.href = url;
                        return false;
                    } else {
                        alert('Please enter a city name.');
                        return false;
                    }
                }
            } else {
                alert('City input field not found.');
                return false;
            }
        }
        

        function goBack11() {
            const urlParams = new URLSearchParams(window.location.search);
            const encodedCityName = urlParams.get('city');
            const cityInput = document.getElementById('city-input'); // Ensure this matches your input field ID
            const cityName = cityInput.value.trim() || (encodedCityName ? decodeURIComponent(encodedCityName) : '');
            const url = 'air.html?city=' + encodeURIComponent(cityName);
            window.location.href = url;
        }
