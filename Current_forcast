        document.addEventListener('DOMContentLoaded', function() {
            const recommendationCheckbox = document.getElementById('recommendation-checkbox');
            const recommendationDiv = document.getElementById('recommendation');
        
            function initializeRecommendationCheckbox() {
                const recommendationPref = localStorage.getItem('recommendationPref');
                if (recommendationPref === 'true') {
                    recommendationCheckbox.checked = true;
                    recommendationDiv.style.display = 'block';
                } else {
                    recommendationCheckbox.checked = false;
                    recommendationDiv.style.display = 'none';
                }
            }
        
            initializeRecommendationCheckbox();
        
            recommendationCheckbox.addEventListener('change', function() {
                if (this.checked) {
                    recommendationDiv.style.display = 'block';
                    localStorage.setItem('recommendationPref', 'true');
                } else {
                    recommendationDiv.style.display = 'none';
                    localStorage.setItem('recommendationPref', 'false');
                }
            });
        });
   

var popupTimeout;
var popupsEnabled = true; // Start with popups disabled

// Check local storage for saved value on page load
var savedValue = localStorage.getItem('popupsEnabled');
if (savedValue !== null) {
    popupsEnabled = JSON.parse(savedValue);
    document.getElementById('descrp').checked = popupsEnabled;
    togglePopups(popupsEnabled); // Update popups display based on saved value
}

document.getElementById('descrp').addEventListener('change', function() {
    popupsEnabled = this.checked; // Toggle popupsEnabled based on checkbox state
    localStorage.setItem('popupsEnabled', popupsEnabled); // Save value to local storage
    togglePopups(popupsEnabled); // Update popups display
});

function togglePopups(enabled) {
    var popups = document.querySelectorAll('.popup12');
    popups.forEach(function(popup) {
        if (enabled) {
            popup.style.display = 'none';
        } else {
            popup.style.display = 'none';
        }
    });
}

function showPopup(popupId) {
    if (!popupsEnabled) return;

    var popup = document.getElementById(popupId);
    clearTimeout(popupTimeout);

    var spanRect = document.querySelector('.clickable-text').getBoundingClientRect();
    var popupWidth = popup.offsetWidth;

    popup.style.top = (spanRect.top + (spanRect.height / 2)) + 'px';
    popup.style.left = (spanRect.left - popupWidth - 10) + 'px'; // Adjust 10px for spacing

    popup.style.display = 'block';
    popup.classList.add('fade-in');
}

function hidePopup(popupId) {
    var popup = document.getElementById(popupId);
    popup.classList.remove('fade-in');

    popupTimeout = setTimeout(function() {
        popup.style.display = 'none';
    }, 100);
}
document.getElementById('trigger-text').addEventListener('mouseenter', function(event) {
    var popup = document.getElementById('popup123');
    var rect = event.target.getBoundingClientRect();
    popup.style.top = rect.top + 'px';
    popup.style.left = rect.right + 'px';
    popup.style.display = 'block';
});

document.getElementById('trigger-text').addEventListener('mouseleave', function() {
    var popup = document.getElementById('popup123');
    popup.style.display = 'none';
});








function showNotification(message, type = 'error') {
    const notification = document.getElementById("notification");
    const notificationMessage = document.getElementById("notificationMessage");
    notificationMessage.innerHTML = message;
    notification.className = `notification ${type}`;
    notification.style.display = 'block';
    setTimeout(() => {
        notification.style.display = 'none';
    }, 3000);
}


window.onload = function() {
    const urlParams = new URLSearchParams(window.location.search);
    const encodedCityName = urlParams.get('city');
    if (encodedCityName) {
        const cityName = decodeURIComponent(encodedCityName);
        document.getElementById('cityName').innerText = `Weather data for ${cityName}`;

        // Fetch weather data based on the city name
        fetchCity(cityName);
        speakMessage()
    } else {
        console.error('City parameter not found in URL');
    }
};
    

let updateInterval;


 function startVoiceRecognition(inputId) {
   
    if ('SpeechRecognition' in window || 'webkitSpeechRecognition' in window) {
        const SpeechRecognition = window.SpeechRecognition || window.webkitSpeechRecognition;
        const recognition = new SpeechRecognition();
        recognition.interimResults = true;

       
        recognition.onresult = function(event) {
            const last = event.results.length - 1;
            let command = event.results[last][0].transcript.trim();
            if (command.endsWith(".")) {
                command = command.slice(0, -1);
            }
            document.getElementById('city-input').value = command;
            fetchCity(command);
        };

      
        recognition.start();
    } else {
       
        alert('Speech recognition is not supported in your browser. Please use Chrome or Edge.');
    }
}

        async function fetchAstronomyData(city) {
            const url = `http://api.weatherapi.com/v1/astronomy.json?key=${weatherApiKey}&q=${city}&dt=${new Date().toISOString().split('T')[0]}`;

            try {
                const response = await fetch(url);
                if (!response.ok) {
                    throw new Error('Failed to fetch data');
                }

                const data = await response.json();
                updateUI(data);
            } catch (error) {
                console.error(error);
            }
        }

        function updateUI(astronomyData) {
            if (astronomyData) {
                document.getElementById('sunrise').textContent = astronomyData.astronomy.astro.sunrise;
                document.getElementById('sunset').textContent = astronomyData.astronomy.astro.sunset;
                document.getElementById('moonrise').textContent = astronomyData.astronomy.astro.moonrise;
                document.getElementById('moonset').textContent = astronomyData.astronomy.astro.moonset;
                document.getElementById('moonphase').textContent = astronomyData.astronomy.astro.moon_phase;
                const moonphase = astronomyData.astronomy.astro.moon_phase;
                const moon = document.getElementById('moon-image');

                switch (moonphase) {
                    case "Waxing Crescent":
                        moon.src = "c:/Users/Mukil/Downloads/waxing-crescent-moon-emoji-clipart-xl-removebg-preview.png";
                        break;
                    case "Last Quarter":
                    case "Waning Half Moon":
                        moon.src = "c:/Users/Mukil/Downloads/third_quater-removebg-preview.png";
                        break;
                    case "Waning Gibbous":
                        moon.src = "c:/Users/Mukil/Downloads/WANING_GIBBOUS-removebg-preview.png";
                        break;
                    case "Full Moon":
                        moon.src = "c:/Users/Mukil/Downloads/FULL_MOON-removebg-preview.png";
                        break;
                    case "Waxing Gibbous":
                        moon.src = "c:/Users/Mukil/Downloads/waxing_gibbous-removebg-preview.png";
                        break;
                    case "First Quarter":
                        moon.src = "c:/Users/Mukil/Downloads/first_quater-removebg-preview.png";
                        break;
                    default:
                        moon.src = "c:/Users/Mukil/Downloads/moon-phases-explained__2_-removebg-preview.png";
                        break;
                }
              
            }
            const messageText2 = `


            Here are the current astronomical details for ${data.name}:
            
            - Sunrise: ${astronomyData.astronomy.astro.sunrise}
            - Sunset: ${astronomyData.astronomy.astro.sunset}
            - Moonrise: ${astronomyData.astronomy.astro.moonrise}
            - Moonset: ${astronomyData.astronomy.astro.moonset}
            - Moon Phase: ${astronomyData.astronomy.astro.moon_phase}
            `;
            

        }
        async function fetchCity(city) {
            startUpdatingTime(city);

            const URL = 'https://api.openweathermap.org/data/2.5/weather';
            const Full_url = `${URL}?q=${city}&appid=${openWeatherMapApiKey}&units=metric`;
            try {
                const response = await fetch(Full_url);
                if (!response.ok) {
                    if (response.status === 404) {
                        throw new Error('City not found');
                    } else {
                        throw new Error('Network response was not ok ' + response.statusText);
                    }
                }

                const data = await response.json();
                document.getElementById('loc').innerText = data.name;
                document.getElementById('temp1').innerText = data.main.temp + "Â°C";
                document.getElementById('temp7').innerText = data.visibility + " ";
                document.getElementById('temp6').innerText = data.main.humidity + "%";
                document.getElementById('temp2').innerText = data.wind.speed + " m/s";
                document.getElementById('temp3').innerText = data.main.pressure + " hPa";
                document.getElementById('temp4').innerText = data.clouds.all + "%";
                document.getElementById('temp5').innerText = data.weather[0].main;
                document.getElementById('min').innerText = data.main.temp_min + "Â°C";
                document.getElementById('max').innerText = data.main.temp_max + "Â°C";
                document.getElementById('feel').innerText = data.main.feels_like + "Â°C";

                const icon = data.weather[0].icon;
                const iconUrl = `http://openweathermap.org/img/wn/${icon}.png`;
                document.getElementById('weather-icon').src = iconUrl;
                document.getElementById('cel56').innerText = toFahrenheit(data.main.temp).toFixed(2) + "Â°F";
                document.getElementById('min20').innerText = toFahrenheit(data.main.temp_min).toFixed(2) + "Â°F";
                document.getElementById('min21').innerText = toFahrenheit(data.main.temp_max).toFixed(2) + "Â°F";
                document.getElementById('min22').innerText = toFahrenheit(data.main.feels_like).toFixed(2) + "Â°F";
             
                fetchAstronomyData(city);

const weatherCondition = data.weather[0].main.toLowerCase();
const currentTime = new Date().getHours();
const temperatureValue = data.main.temp;
document.getElementById('cel1').innerText = toKph(data.wind.speed).toFixed(2) + " km/h";

const messageText = `
  Dear User,

  Current location: ${data.name}. 
  The prevailing weather condition is ${data.weather[0].main}.
  The temperature is ${data.main.temp} degrees Celsius, equivalent to ${toFahrenheit(data.main.temp).toFixed(2)} degrees Fahrenheit. 
  The minimum temperature observed is ${data.main.temp_min} degrees Celsius, or ${toFahrenheit(data.main.temp_min).toFixed(2)} degrees Fahrenheit. 
  The maximum temperature recorded is ${data.main.temp_max} degrees Celsius, which is ${toFahrenheit(data.main.temp_max).toFixed(2)} degrees Fahrenheit. 
  It feels like ${data.main.feels_like} degrees Celsius, or ${toFahrenheit(data.main.feels_like).toFixed(2)} degrees Fahrenheit. 
  The humidity level is at ${data.main.humidity} percent. 
  Visibility extends to ${data.visibility} meters. 
  Wind speed is recorded at ${data.wind.speed} meters per second. 
  Atmospheric pressure stands at ${data.main.pressure} hectopascals. 
  Cloud cover is currently at ${data.clouds.all} percent. 



  This is the current weather forecast.

  Your Weather Assistant
`;
const message = new SpeechSynthesisUtterance(messageText);


function toKph(windSpeedMps) {
    return windSpeedMps * 3.6;
}
    
function toFahrenheit(celsius) {
    return (celsius * 9 / 5) + 32;
}


function toCelsius(fahrenheit) {
    return (fahrenheit - 32) * 5 / 9;
}
 
  function showCityInputPopup() {
    const popup = document.getElementById("myModal");
    popup.style.display = "block";
}


