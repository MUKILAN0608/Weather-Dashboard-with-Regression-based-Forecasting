switch (weatherCondition) {
    case "clear":
        if (currentTime >= 6 && currentTime < 19) {
            backgroundImageURL = "url('c:/Users/Mukil/Downloads/sky-weather.gif')";
        } else {
            backgroundImageURL = "url('c:/Users/Mukil/Downloads/anime-himmel.gif')";
        }
        selectedFoods = foodsForClearClimate;
        break;
    
    case "clouds":
        if (currentTime >= 6 && currentTime < 19) {
            backgroundImageURL = "url('c:/Users/Mukil/Documents/clouds-nature.gif')";
       
        } else {
            backgroundImageURL = "url('c:/Users/Mukil/Downloads/ffda36184fe14708bbf6757714c239ecabb2ca8b_hq.gif')";
        }
        selectedFoods = foodsForCloudyClimate;
        break;

        case "few clouds":
            backgroundImageURL = "url('c:/Users/Mukil/Documents/200w.gif')";
            selectedFoods = foodsForCloudyClimate;
            break;

        case "overcast clouds":
